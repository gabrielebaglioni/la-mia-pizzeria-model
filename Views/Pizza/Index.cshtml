@model List<Pizza>

<body style="margin:0;" padding="0;" box-sizin="border-box;">
    <section >
        <div class="container">
            <div class="row">
                @if (Model.Count > 0)
                {
                    @foreach (Pizza pizza in Model)
                    {
                        <div class="col-3">
                            <div c>
                            
                                <img style="width:50px;" class="img-fluid" src="@pizza.Photo" alt="@pizza.Name" />
                                <a href="@Url.Action("Show","Pizza", new{ Id = pizza.Id})">
                                    <h3 class="py-1">@pizza.Name</h3>
                                </a>
                                <span class="py-1">Price : @pizza.Price $</span>
                                <p class="px-2"> Ingredienti: <small>@pizza.Description</small></p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h2>Il menu e'al momento vuoto</h2>
                }
            </div>
        </div>
    </section>
</body>